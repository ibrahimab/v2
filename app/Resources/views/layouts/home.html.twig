{% extends 'layouts/base.html.twig' %}

{% block bodyId %}home{% endblock %}
{% block body %}

    {% set search_path = locale_path('search') %}
    <!-- header -->
    <header>
        <div class="home-menu">
            <div class="row">
                <div class="small-9 small-offset-3">
                    <ul>
                        <li class="home active"><a href="#"><i class="fi-home"></i></a></li>
                        <li><a href="{{ locale_path('search') }}">zoek en boek</a></li>
                        <li><a href="{{ locale_path('all_regions') }}">skigebieden</a></li>
                        <li><a href="#">aanbiedingen</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="header-container">
            <div id="header-usp">
                <div class="large-12 columns">
                    <h2 class="title-usp">{{ "homepage.big-title"|trans }}<span>{{ "homepage.sub-title"|trans }}</span></h2>
                </div>
            </div>
            <div id="header-form">
                <div class="row" id="header-form-title">
                    <div class="large-12 columns">
                        {% set trans_chalets_apartments = 'chalets-apartments'|trans %}
                        {% set trans_in                 = 'in'|trans                 %}
                        {% set trans_and                = 'and'|trans                %}
                        {% set trans_ski_areas          = 'ski-areas'|trans          %}
                        {% set trans_france             = 'france'|trans             %}
                        {% set trans_austria            = 'austria'|trans            %}
                        {% set trans_switzerland        = 'switzerland'|trans        %}
                        {% set trans_italy              = 'italy'|trans              %}
                        <h1 class="title-form">Kies uit <a href="{{ search_path }}" title="1.209 {{ trans_chalets_apartments }}">1209 {{ trans_chalets_apartments }}</a> {{ trans_in }} 45 {{ trans_ski_areas|lower }} {{ trans_in }} <a href="{{ locale_path('show_country', { countrySlug: trans_austria|seo }) }}" title="{{ trans_chalets_apartments }} {{ trans_in }} {{ trans_austria }}">{{ trans_austria }}</a>, <a href="{{ locale_path('show_country', { countrySlug: trans_switzerland|seo }) }}" title="{{ trans_chalets_apartments }} {{ trans_in }} {{ trans_switzerland }}">{{ trans_switzerland }}</a>, <a href="{{ locale_path('show_country', { countrySlug: trans_france|seo }) }}" title="{{ trans_chalets_apartments }} {{ trans_in }} {{ trans_france }}">{{ trans_france }}</a> {{ trans_and }} <a href="{{ locale_path('show_country', { countrySlug: trans_italy|seo }) }}" title="{{ trans_chalets_apartments }} {{ trans_in }} {{ trans_italy }}">{{ trans_italy }}</a></h1>
                    </div>
                </div>
                <div class="row" id="header-form-fields">
                    <form>
                        <div class="large-3 medium-3 columns">
                            <div class="autocomplete-container">
                                <input type="text" name="query" data-role="autocomplete-query" data-type="home" id="choose-destination" class="radius home" data-focus-text="bv. bestemming of accommodatie" data-default-placeholder="Waar wil je naartoe?" placeholder="Waar wil je naartoe?" autocomplete="off" />
                                <div class="results" data-role="autocomplete-results">
                                </div>
                            </div>
                        </div>
                        <div class="large-3 medium-3 columns">
                            <select class="radius">
                                <option>Wanneer wil je gaan?</option>
                                {% set weekend_label = 'weekend'|trans %}
                                {% for timestamp, weekend in weekends %}
                                    <option value="{{ timestamp }}">{{weekend_label}} {{ weekend }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="large-3 medium-3 columns">
                            {# we have two select items because of text switching when resizing viewport (medium ('Hoeveel personen') vs rest ('Met hoeveel personen ga je?')) #}
                            <select class="radius hide-for-medium" data-role="choose-persons-home">
                                <option value="hoeveel">Met hoeveel personen ga je?</option>
                                {% for i in 1..39 %}
                                <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                                <option value="40">40 of meer</option>
                            </select>
                    
                            <select class="radius show-for-medium" data-role="choose-persons">
                                <option value="hoeveel">Hoeveel personen?</option>
                                {% for i in 1..39 %}
                                <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                                <option value="40">40 of meer</option>
                            </select>
                        </div>
                        <div class="large-3 medium-3 columns">
                            <a href="{{ search_path }}" data-role="search-simple" class="button radius right" title="Toon resultaten op Chalet.nl"><i class="fi-magnifying-glass"></i>Toon <span>1.209</span> resultaten</a><br />
                            <a href="{{ search_path }}" data-role="search-advanced" class="link right" title="Uitgebreid zoeken op Chalet.nl">Uitgebreid zoeken</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>

{% endblock %}
