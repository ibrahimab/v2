{% extends 'layouts/default.html.twig' %}

{% block breadcrumbs %}
    {{ 
        breadcrumbs({
            countryName: country.getLocaleName(get_locale()),
            regionName:  region.getLocaleName(get_locale()),
            placeName:   place.getLocaleName(get_locale())
        }, {
            countrySlug: country.getLocaleName(get_locale()),
            regionSlug:  region.getLocaleSeoName(get_locale())
        })
    }}
{% endblock %}

{% block body %}
    
    {{ parent() }}
    
    <!-- content -->
    <section class="landing">
        <div class="row" id="area-specs"><!-- id="area-specs" -->
            <h1>{{ place.getLocaleName(get_locale()) }}</h1>
        </div>
        <div class="row">
            <div class="large-8 medium-8 columns">
                <p>{{ place.getLocaleDescription(get_locale())|nl2br }}</p>
                <p><a href="{{ locale_path('show_place', {placeSlug: place.getLocaleName(get_locale())}) }}" class="button small radius" title="Bekijk het gehele aanbod">Bekijk al onze chalets en appartementen in {{ place.getLocaleName(get_locale()) }}</a></p>
                
            </div>
            <div class="large-4 medium-4 columns">
                <h3>{{ 'features'|trans }} {{ place.getLocaleName(get_locale()) }}</h3>
                <ul class="landing-details">
                    <li>{{ 'chalets-apartments'|trans|capitalize }}<span>{{ place.getTypesCount() }}</span></li>
                    <li>{{ 'average-rating'|trans }}<span>{{ place.getAverageRatings() }}</span></li>
                    <li>{{ 'ratings'|trans }}<span>{{ place.getRatingsCount() }}</span></li>
                </ul>
            </div>
        </div>
    </section>
    
    <section id="search-filter-results">
        <div id="search-results">
            <div class="row">
                <div class="small-12 medium-12 large-12 columns">
                    {% include 'partials/type.html.twig' %}
                </div>
            </div>
        </div>
    </section>
    
{% endblock %}