{{ set_paginator(paginator) }}
<div class="search-results-container" data-role="search-results">
    {% include 'partials/search/filters.html.twig' %}
    <hr />
    <div class="row">
        <div class="small-12 medium-6 large-6 columns">
            <div class="title">{{ count_paginator() }} {{ 'results'|trans }}</div>
        </div>
        <div class="small-12 medium-6 large-6 columns">
            <form>
                <div class="row">
                    <div class="small-12 columns">
                        <div class="row">
                            <div class="small-3 columns">
                                <label for="right-label" class="right inline">{{ 'sort'|trans }}</label>
                            </div>
                            <div class="small-9 columns">
                                <select class="radius">
                                    <option value="1423868400">{{ 'by-price-asc'|trans }}</option>
                                    <option value="1423868400">{{ 'by-price-desc'|trans }}</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            {% set results = get_paginator() %}
            {% set images  = search_images(results) %}
            {% for result in results %}
            {% include 'partials/search/result.html.twig' with {'result': result, 'all_images': images} %}
            {% endfor %}
        </div>
    </div>
    {{ render_paginator() }}
</div>