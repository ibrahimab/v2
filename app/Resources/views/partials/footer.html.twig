                <li><a href="{{ locale_path('weekendski') }}">{{ 'weekendski'|trans }}</a></li>
            </ul>
        </div>
        <div class="large-3 medium-3 columns">
            <h4>{{ 'pay.safely'|trans }}</h4>
            <i class="sprite sprite-payment-ideal"></i>
            <i class="sprite sprite-payment-bankcontact"></i>
            <i class="sprite sprite-payment-visa"></i>
            <i class="sprite sprite-payment-mastercard"></i>
            <h4>{{ 'affiliated.with'|trans }}</h4>
            <img src="{{ asset('bundles/app/img/icons/logo-anvr-sgr-calamiteiten.png') }}" class="anvr-sgr-calamities" />
            <h4>Reviews</h4>
            <div class="trustpilot-widget" data-locale="nl-NL" data-template-id="53aa8807dec7e10d38f59f32" data-businessunit-id="4f3bde44000064000512e75b" data-style-height="100%" data-style-width="216px" data-theme="light"></div>
        </div>
        <div class="large-3 medium-3 columns">
            <h4>Social media</h4>
            {% if twitter != false %}
                <a href="https://twitter.com/{{ twitter }}" data-role="new-window"><i class="sprite sprite-social-twitter-big icon-overlay"></i></a>
            {% endif %}
            {% if facebook != false %}
                <a href="https://facebook.com/{{ facebook }}" data-role="new-window"><i class="sprite sprite-social-fb-big icon-overlay"></i></a>
            {% endif %}
            {% if google != false %}
                <a href="https://plus.google.com/{{ google }}" data-role="new-window"><i class="sprite sprite-social-plus-big icon-overlay"></i></a>
            {% endif %}
            {% if pinterest != false %}
                <a href="https://www.pinterest.com/{{ pinterest }}" data-role="new-window"><i class="icon icon-pinterest icon-overlay"></i></a>
            {% endif %}
            <div id="footer-newsletter">
                <h4>Nieuwsbrief</h4>
                <p>Mis geen aanbiedingen, nieuws en reistips.</p>
                <form name="newsletter-form" action="{{ path('newsletter') }}" method="get">
                    <div class="email-field">
                        <input name="email" type="email" placeholder="e-mailadres" required />
                    </div>
                    <button type="submit" class="button radius tiny">Inschrijven</button>
                </form>
            </div>
        </div>
    </div>
