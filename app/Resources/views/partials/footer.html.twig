                <li>Veel grote chalets</li>
                <li>Kwaliteit</li>
                <li>Persoonlijke service</li>
                <li>Prijsbewust</li>
                <li>Lid SGR en ANVR</li>
            </ul>
            <h4>{{ website_concern.name() }}</h4>
            <p>
                Wipmolenlaan 3<br />3447 GJ Woerden<br /><i class="fi-mail"></i><a href="mailto:info@chalet.nl">info@chalet.nl</a><br /><i class="fi-telephone"></i><a href="tel:+31-348-434649">0348 43 46 49</a>
            </p>
        </div>
        <div class="large-3 medium-3 columns">
            <h4>Meer informatie</h4>
            <ul class="arrowed">
                <li><a href="/inloggen.php" target="_blank">Mijn boeking</a></li>
                <li><a href="{{ locale_path('page_about') }}">{{ 'about'|trans }}</a></li>
