{% if tags %}
    <div data-role="filter-tags" id="search-filters-active">
    
        {% for tag, data in tags %}

            {% set filter_distance = constant('FILTER_DISTANCE', filter_service) %}
            {% set filter_length   = constant('FILTER_LENGTH', filter_service) %}
            {% set filter_facility = constant('FILTER_FACILITY', filter_service) %}
            {% set filter_bathroom = constant('FILTER_BATHROOM', filter_service) %}
            {% set filter_theme    = constant('FILTER_THEME', filter_service) %}

            {% if tag == filter_distance %}
            
                <div data-role="filter-tag">
                    Afstand tot piste:
                    {{ data|tokenize(filter_distance)|trans }}
                    <a href="#" data-role="remove-filter" data-filter="{{ filter_distance }}" data-filter-value="{{ data }}"><i class="fi-x"></i></a>
                </div>
            
            {% endif %}
        
            {% if tag == filter_length %}
            
                <div data-role="filter-tag">
                    Aantal km pistes:
                    {{ data|tokenize(filter_length)|trans }}
                    <a href="#" data-role="remove-filter" data-filter="{{ filter_length }}" data-filter-value="{{ data }}"><i class="fi-x"></i></a>
                </div>
            
            {% endif %}
        
            {% if tag == filter_facility %}
            
                {% for facility in data %}
            
                    <div data-role="filter-tag">
                        Faciliteit:
                        {{ facility|tokenize(filter_facility)|trans }}
                        <a href="#" data-role="remove-filter" data-filter="{{ filter_facility }}" data-filter-value="{{ facility }}" data-filter-multi="true"><i class="fi-x"></i></a>
                    </div>
                
                {% endfor %}
            
            {% endif %}
        
            {% if tag == filter_bathroom %}
            
                <div data-role="filter-tag">
                    Aantal badkamers:
                    {{ data|tokenize(filter_bathroom)|trans }}
                    <a href="#" data-role="remove-filter" data-filter="{{ filter_bathroom }}" data-filter-value="{{ data }}"><i class="fi-x"></i></a>
                </div>
            
            {% endif %}
        
            {% if tag == filter_theme %}
            
                {% for theme in data %}
            
                    <div data-role="filter-tag">
                        Thema:
                        {{ theme|tokenize(filter_theme)|trans }}
                        <a href="#" data-role="remove-filter" data-filter="{{ filter_theme }}" data-filter-value="{{ theme }}" data-filter-multi="true"><i class="fi-x"></i></a>
                    </div>
            
                {% endfor %}
            
            {% endif %}

        {% endfor %}
    
        <div><a href="#" data-role="remove-filters">Wis alle filters <i class="fi-trash"></i></a></div>
    </div>
{% endif %}