{% set locale = get_locale() %}
<div class="table-wrapper">

    <div class="tb-h">
        <div class="tb-c tb-h-1">Personen</div>
        <div class="tb-c tb-h-2">Slaapkamers</div>
        <div class="tb-c tb-h-3">Badkamers</div>
        <div class="tb-c tb-h-4">Type</div>
        <div class="tb-c tb-h-5">Beoordeling</div>
        <div class="tb-c tb-h-6">&nbsp;</div>
        <div class="tb-c tb-h-7">Prijs accommodatie</div>
    </div>

    {% for type in types %}
    <a class="tb-r{{ loop.index % 2 ? ' sale-type' : '' }}" href="{{ locale_path('show_type', {'beginCode': type.getAccommodation().getPlace().getCountry().getStartCode(), 'typeId': type.getId()}) }}">
        <div class="tb-c tb-c-1">
            <i class="sprite sprite-icon-torso"></i>
            {{ ( type.getOptimalResidents() == type.getMaxResidents() ? type.getOptimalResidents() : (type.getOptimalResidents() ~ ' - ' ~ type.getMaxResidents()) ) }}
        </div>
        <div class="tb-c">
            <i class="sprite sprite-icon-sleep"></i>
            {{ type.getBedrooms() }}
        </div>
        <div class="tb-c">
            <i class="sprite sprite-icon-bath"></i>
            {{ type.getBathrooms() }}
        </div>
        <div class="tb-c">
            {{ type.getLocaleName(locale) }}
        </div>
        <div class="tb-c"><span>8,5</span></div>
        <div class="tb-c tb-c-6">{% if loop.index % 2 %}<i class="sprite sprite-icon-discount"></i>{% endif %}</div>
        <div class="tb-c tb-c-7">&euro; 295,-<i class="fi-info"></i></div>
    </a>
    {% endfor %}
    <div class="table-explain">
        <p>
            <span>U kunt deze tabel horizontaal scrollen</span>
            <i class="sprite sprite-cursor-explain"></i>
            <a href="" class="button tiny radius">ik heb het begrepen</a>
        </p>
    </div>
</div>