{% set persons     = 'persons'|trans|lower %}
{% set bathrooms   = 'bathrooms'|trans|lower %}
{% set bedrooms    = 'bedrooms'|trans|lower %}
{% set placeholder = (destination == true ? 'Voeg nog een bestemming toe' : 'Waar wil je naartoe?') %}

<div class="autocomplete-container">
    <input type="text" name="query" data-role="autocomplete-query" data-type="search-book" id="choose-destination" class="radius" data-focus-text="bijv. bestemming of accommodatie" data-default-placeholder="{{ placeholder }}" placeholder="{{ placeholder }}"  />
    <div class="results search-book" data-role="autocomplete-results">
    </div>
</div>
<select class="radius">
    <option value="husker">{{ 'select-when'|trans }}</option>
    <option value="1423868400">weekend 14 februari 2015</option>
    <option value="1424473200">weekend 21 februari 2015</option>
    <option value="1425078000">weekend 28 februari 2015</option>
    <option value="1425682800">weekend 7 maart 2015</option>
    <option value="1426287600">weekend 14 maart 2015</option>
    <option value="1426892400">weekend 21 maart 2015</option>
    <option value="1427497200">weekend 28 maart 2015</option>
    <option value="1428098400">weekend 4 april 2015</option>
    <option value="1428703200">weekend 11 april 2015</option>
    <option value="1429308000">weekend 18 april 2015</option>
    <option value="1429912800">weekend 25 april 2015</option>
    <option value="1430517600">weekend 2 mei 2015</option>
</select>
<select class="radius">
    <option value="hoeveel">{{ 'select-how-many'|trans }}</option>
    <option value="1">1 {{ 'person'|trans }}</option>
    {% for i in 2..39 %}
        <option value="{{ i }}">{{ i ~ ' ' ~ persons }}</option>
    {% endfor %}
    <option value="40">40 {{ 'or-more'|trans }} {{ persons }}</option>
</select>
<select class="radius" data-role="change-bedrooms">
    <option value="0">{{ 'select-bedrooms'|trans }}</option>
    <option value="1"{{ form_filters['bedrooms'] is defined and 1 == form_filters['bedrooms'] ? ' selected="selected"' }}>1 {{ 'bedroom'|trans }}</option>
    {% for i in 2..10 %}
        <option value="{{ i }}"{{ form_filters['bedrooms'] is defined and i == form_filters['bedrooms'] ? ' selected="selected"' }}>{{ i }} {{ bedrooms }}</option>
    {% endfor %}
</select>
<select class="radius" data-role="change-bathrooms">
    <option value="0">{{ 'select-bathrooms'|trans }}</option>
    <option value="1423868400">1 {{ 'bathroom'|trans }}</option>
    <option value="1"{{ form_filters['bathrooms'] is defined and 1 == form_filters['bathrooms'] ? ' selected="selected"' }}>1 {{ 'bathroom'|trans }}</option>
    {% for i in 2..10 %}
        <option value="{{ i }}"{{ form_filters['bathrooms'] is defined and i == form_filters['bathrooms'] ? ' selected="selected"' }}>{{ i }} {{ bathrooms }}</option>
    {% endfor %}
</select>