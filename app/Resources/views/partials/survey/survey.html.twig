{% set locale = get_locale() %}
<article class="review-item">
    <div class="row">
        <div class="small-12 medium-12 large-6 columns">
            {% if survey.average > 0 %}
                <span class="rating">{{ survey.average|number_format(1, ',', '') }}</span>
            {% endif %}
            <span class="author">{{ survey.website_name == '' ? 'anonymous'|trans : survey.website_name }},</span>
            <span class="date">{{ survey.exact_arrival_date|format_date('F Y') }}</span>
            <p data-role="review-text">{{ survey.website_text }}</p>
        </div>
        <div class="small-12 medium-12 large-6 columns">
            <ul class="ratings">
                <li>Ontvangst ter plaatse<span>{{ get_survey_answer(survey, 1, 1) }}</span></li>
                <li>Ligging van de accommodatie<span>{{ get_survey_answer(survey, 1, 2) }}</span></li>
                <li>Comfort / inrichting<span>{{ get_survey_answer(survey, 1, 3) }}</span></li>
                <li>Hygiene / schoonmaak<span>{{ get_survey_answer(survey, 1, 4) }}</span></li>
                <li>Faciliteiten in en rondom de accommodatie<span>{{ get_survey_answer(survey, 1, 5) }}</span></li>
                <li>Prijs / kwaliteitverhouding<span>{{ get_survey_answer(survey, 1, 6) }}</span></li>
            </ul>
        </div>
    </div>
</article>