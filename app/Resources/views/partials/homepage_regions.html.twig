{% set locale  = get_locale() %}
{% set place   = places|first %}
{% set country = place.getCountry() %}
{% set locales = {

    name: {
        
        region:  region.getLocaleName(locale),
        country: country.getLocaleName(locale)
    },
    
    seo: {
        
        region:  locale_path('show_region', {'regionSlug': region.getLocaleSeoName(locale)}),
        country: locale_path('show_country', {'countrySlug': country.getLocaleName(locale)})
    }

} %}
<section id="area-selected">
    <div class="row">
        <div class="large-12 columns">
            <h2>Skidorpen in <a href="{{ locales['seo']['region'] }}" title="{{ locales['name']['region'] }}">{{ locales['name']['region'] }}</a>, <a href="{{ locales['seo']['country'] }}" title="Skidorpen in {{ locales['name']['region'] }} in {{ locales['name']['country'] }}">{{ locales['name']['country'] }}</a></h2>
        </div>
    </div>
    <div class="row" id="area-specs"><!-- id="area-specs" -->
        <div class="large-12 columns">
            <span class="area-spec"><i class="sprite sprite-blue-pistes"></i>{{ region.getTotalSlopesDistance() }} kilometer piste totaal</span>
            <span class="area-spec"><i class="sprite sprite-blue-mountain"></i>hoogte {{ region.getMinimumAltitude() }}{{ (region.getMinimumAltitude() == region.getMaximumAltitude() ? (' - ' ~ region.getMaximumAltitude()) : '') }} meter</span>
            <span class="area-spec"><i class="sprite sprite-blue-snow"></i>Op dit moment 150 cm sneeuw op de pistes</span>
            <span class="area-spec"><i class="sprite sprite-blue-chalet"></i>57 chalets en appartementen verdeelt over 16 skidorpen</span>
        </div>
    </div>
    <div class="row" data-equalizer><!-- each row contains 3 villages -->
        <div class="small-12 medium-4 large-4 columns">
            <article class="overview" data-equalizer-watch>
                <div class="accom-img">
                    <img src="img/accom/accom-1.jpg" alt="" />
                </div>
                <div class="accom-desc">
                    <div class="title"><a href="zoekboek.html">Brides les Bains</a></div>
                    <div class="chalets"><i class="sprite sprite-gray-chalet"></i>23 chalets en appartementen</div>
                    <div class="mountain"><i class="sprite sprite-gray-mountain"></i>Ligt op 1.345 meter hoogte</div>
                </div>
            </article>
        </div>
        <div class="small-12 medium-4 large-4 columns">
            <article class="overview" data-equalizer-watch>
                <div class="accom-img">
                    <img src="img/accom/accom-2.jpg" alt="" />
                </div>
                <div class="accom-desc">
                    <div class="title"><a href="zoekboek.html">Le Bettaix</a></div>
                    <div class="chalets"><i class="sprite sprite-gray-chalet"></i>12 chalets en appartementen</div>
                    <div class="mountain"><i class="sprite sprite-gray-mountain"></i>Ligt op 872 meter hoogte</div>
                </div>
            </article>
        </div>
        <div class="small-12 medium-4 large-4 columns">
            <article class="overview" data-equalizer-watch>
                <div class="accom-img">
                    <img src="img/accom/accom-3.jpg" alt="" />
                </div>
                <div class="accom-desc">
                    <div class="title"><a href="zoekboek.html">Saint Martin de Bellevill</a></div>
                    <div class="chalets"><i class="sprite sprite-gray-chalet"></i>8 chalets en appartementen</div>
                    <div class="mountain"><i class="sprite sprite-gray-mountain"></i>Ligt op 2.350 meter hoogte</div>
                </div>
            </article>
        </div>
    </div>
    <div class="row">
        <div class="large-12 centered columns">
            <a href="" class="button small radius" title="Meer over Skigebied Les Trois Vallees">Meer over Les Trois Vallees</a>
            <a href="zoekboek.html" class="button small radius" title="Bekijk alle skigebieden" style="margin-left:10px;">Bekijk alle skigebieden</a>
        </div>
    </div>
</section>