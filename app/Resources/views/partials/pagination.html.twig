{% if last > 1 %}
    <div class="row">
        <div class="small-12 medium-12 large-12 columns">
            <ul class="pagination" role="menubar" aria-label="Pagination">

                {% if current > 1 %}
                    <li><a href="{{ url_paginator(current - 1) }}" data-role="paginate-search" data-page="{{ current - 1 }}">&laquo;</a></li>
                {% endif %}

                {% if last > 3 %}

                    {% if current < 3 %}

                        {% for i in 1..3 %}
                            <li{{ active_class_paginator(i) }}><a href="{{ url_paginator(i) }}" data-role="paginate-search" data-page="{{ i }}">{{ i }}</a></li>
                        {% endfor %}

                    {% else %}

                        <li><a href="{{ url_paginator(1) }}" data-role="paginate-search" data-page="{{ 1 }}">1</a></li>
                        <li>...</li>

                    {% endif %}

                    {% if current >= 3 and current < (last - 2) %}

                        {% for i in (current - 1)..(current + 1) %}
                            <li{{ active_class_paginator(i) }}><a href="{{ url_paginator(i) }}" data-role="paginate-search" data-page="{{ i }}">{{ i }}</a></li>
                        {% endfor %}

                    {% endif %}

                    {% if current >= (last - 2) %}

                        {% for i in (last - 2)..last %}
                            <li{{ active_class_paginator(i) }}><a href="{{ url_paginator(i) }}" data-role="paginate-search" data-page="{{ i }}"{{ (current == i ? ' class="current"' : '') }}>{{ i }}</a></li>
                        {% endfor %}

                    {% else %}

                        <li>...</li>
                        <li><a href="{{ url_paginator(last) }}" data-role="paginate-search" data-page="{{ last }}">{{ last }}</a></li>

                    {% endif %}

                {% else %}

                    {% for i in 1..last %}
                        <li{{ active_class_paginator(i) }}><a href="{{ url_paginator(i) }}" data-role="paginate-search" data-page="{{ i }}"{{ (current == i ? ' class="current"' : '') }}>{{ i }}</a></li>
                    {% endfor %}

                {% endif %}

                {% if current < last %}
                    <li><a href="{{ url_paginator(current + 1) }}" data-role="paginate-search" data-page="{{ current + 1 }}">&raquo;</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endif %}