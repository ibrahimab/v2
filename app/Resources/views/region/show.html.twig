{% extends 'layouts/default.html.twig' %}

{% block breadcrumbs %}
    {{ 
        breadcrumbs({
            countryName: country.getLocaleName(get_locale()), 
            regionName:  region.getLocaleName(get_locale())
        }, {
            countrySlug: country.getLocaleName(get_locale())
        })
    }}
{% endblock %}

{% block body %}
    
    {{ parent() }}
    
    <!-- content -->
    <section class="landing">
        <div class="row" id="area-specs"><!-- id="area-specs" -->
            <h1>{{ region.getLocaleName(get_locale()) }}</h1>
        </div>
        <div class="row">
            <div class="large-8 medium-8 columns">
                <p>{{ region.getLocaleDescription(get_locale())|nl2br }}</p>
                <p><a href="{{ locale_path('show_region', {regionSlug: region.getLocaleName(get_locale())}) }}" class="button small radius" title="Bekijk het gehele aanbod">Bekijk al onze chalets en appartementen in {{ region.getLocaleName(get_locale()) }}</a></p>
                
            </div>
            <div class="large-4 medium-4 columns">
                <h3>{{ 'features'|trans }} {{ region.getLocaleName(get_locale()) }}</h3>
                <ul class="landing-details">
                    <li>{{ 'chalets-apartments'|trans|capitalize }}<span>{{ region.getTypesCount() }}</span></li>
                    <li>{{ 'average-rating'|trans }}<span>{{ region.getAverageRatings() }}</span></li>
                    <li>{{ 'ratings'|trans }}<span>{{ region.getRatingsCount() }}</span></li>
                </ul>
            </div>
        </div>
    </section>
    
    <section id="area-selected">
        <h2>{{ 'ski-areas'|trans}} {{ region.getLocaleName(get_locale()) }}</h2>
        <div class="row" data-equalizer>
            {% for place in places %}
            <div class="small-12 medium-3 large-3 columns{{ (( ((loop.index % 4) is same as(0)) or loop.last) ? ' end' : '') }}">
                <article class="overview" data-equalizer-watch>
                    <div class="accom-img">
                        <!-- ><img src="{{ region_image(region) }}" alt="{{ region.getLocaleName(get_locale()) }}" /> -->
                    </div>
                    <div class="accom-desc">
                        <div class="title"><a href="{{ locale_path('show_region', {regionSlug: region.getLocaleSeoName(get_locale())}) }}">{{ place.getName() }}</a></div>
                        <br />
                        <div class="chalets"><i class="sprite sprite-gray-chalet"></i><strong>{{ region.getTypesCount() }}</strong> chalets &amp; appartementen</div>
                        {% if region.getMinimumAltitude() == region.getMaximumAltitude() %}
                            <div class="mountain"><i class="sprite sprite-gray-mountain"></i>Ligt tussen <strong>{{ region.getMinimumAltitude() }}</strong> {{ 'and'|trans }} <strong>{{ region.getMaximumAltitude() }}</strong> m hoogte</div>
                        {% else %}
                            <div class="mountain"><i class="sprite sprite-gray-mountain"></i>Ligt op <strong>{{ region.getMaximumAltitude() }}</strong> m hoogte</div>
                        {% endif %}
                        <div class="pistes"><i class="sprite sprite-icon-pistes"></i>Ruim <strong>{{ region.getTotalSlopesDistance() }}</strong> km pistes</div>
                    </div>
                </article>
            </div>
            {% if (loop.index % 4) is same as(0) %}
            </div><div class="row" data-equalizer>
            {% endif %}
            {% endfor %}
        </div>
    </section>
    
{% endblock %}